# Backend Environment Configuration Template
# Copy this to .env and fill in your values

# ====================
# SERVER
# ====================
NODE_ENV=development
PORT=5000

# ====================
# FIREBASE
# ====================
# Firebase project ID (e.g., "my-calendar-app")
FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage bucket (e.g., "my-calendar-app.appspot.com")
FIREBASE_STORAGE_BUCKET=your-bucket-name.appspot.com

# Firebase Service Account JSON (base64 encoded or path to serviceAccountKey.json)
# If using path: Leave this empty and ensure serviceAccountKey.json exists in backend root
# If using env var: Paste the entire JSON as base64 or raw JSON
FIREBASE_SERVICE_ACCOUNT=

# ====================
# CLOUDINARY (Image Storage)
# ====================
# Get these from: https://cloudinary.com/console
# Free tier: 25 GB storage, 25 GB bandwidth/month
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ====================
# IMAGE UPLOAD
# ====================
# Maximum upload size in MB
MAX_UPLOAD_MB=10

# ====================
# AI IMAGE GENERATION
# ====================
# AI Provider: 'openai' | 'stability' | 'mock'
AI_PROVIDER=mock

# OpenAI API Key (for DALL-E image generation)
OPENAI_API_KEY=

# Stability AI API Key (for Stable Diffusion image generation)
STABILITY_API_KEY=

# ====================
# EMAIL (OPTIONAL)
# ====================
# SMTP configuration for sending generated PDFs via email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ====================
# SECURITY
# ====================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:4321,http://localhost:3000

# ====================
# LOGGING
# ====================
LOG_LEVEL=info
