---
import Layout from '../layouts/Layout.astro';
import Dashboard from '../components/Dashboard';
---

<Layout title="Calendar App">
  <!-- Dashboard Section (shown when logged in) -->
  <div id="dashboard-view" style="display: none;">
    <Dashboard client:only="react" />
  </div>

  <!-- Landing Page (shown when not logged in) -->
  <div id="landing-view">
    <!-- Hero Section -->
    <div class="hero-section">
      <!-- Animated Background -->
      <div class="hero-background">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>
        
        <!-- Floating Calendar Cards -->
        <div class="floating-calendars">
          {Array.from({ length: 8 }).map((_, i) => (
            <div class="floating-calendar" style={`--delay: ${i * 0.5}s; --x: ${Math.random() * 100}%; --y: ${Math.random() * 100}%`}>
              <div class="calendar-mini">
                <div class="calendar-header">{['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug'][i]}</div>
                <div class="calendar-grid">
                  {Array.from({ length: 9 }).map(() => (
                    <div class="calendar-day"></div>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Hero Content -->
      <div class="hero-content">
        <div class="hero-badge">
          <svg class="badge-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor"/>
          </svg>
          <span>Your Personal Calendar Assistant</span>
        </div>

        <h1 class="hero-title">
          Organize Your Life,
          <span class="gradient-text">One Day at a Time</span>
        </h1>

        <p class="hero-subtitle">
          The most beautiful and intuitive calendar app to manage your events, 
          schedule meetings, and never miss important moments.
        </p>

        <!-- Animated Date Display -->
        <div class="current-date-display">
          <div class="date-card">
            <div class="date-day" id="current-day">15</div>
            <div class="date-info">
              <div class="date-month" id="current-month">December</div>
              <div class="date-year" id="current-year">2024</div>
            </div>
          </div>
          <div class="date-pulse"></div>
        </div>

        <!-- CTA Buttons -->
        <div class="hero-buttons">
          <a href="/login" class="btn-primary">
            <span>Get Started</span>
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="#features" class="btn-secondary">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M14.752 11.168L20.591 5.329M9.456 5.68L7.547 6.633C5.828 7.493 4.969 7.923 4.692 8.634C4.415 9.345 4.789 10.158 5.537 11.784L6.49 13.693M18.311 17.51L17.358 19.419C16.498 21.138 16.068 21.997 15.357 22.274C14.646 22.551 13.833 22.177 12.207 21.429L10.298 20.476M21.5 14C21.5 18.1421 18.1421 21.5 14 21.5C9.85786 21.5 6.5 18.1421 6.5 14C6.5 9.85786 9.85786 6.5 14 6.5C18.1421 6.5 21.5 9.85786 21.5 14Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Learn More</span>
          </a>
        </div>
      </div>
    </div>

